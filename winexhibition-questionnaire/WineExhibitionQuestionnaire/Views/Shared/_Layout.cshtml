<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{ 
        var lang = ViewData["language"] ?? "de-DE";
    }

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top ">
    <div class="container">
        <div class="navbar-header pull-left">
            <div class="site-logo sticky-logo navigation-logo">
                <a href="https://www.wine-trophy.com/" title="DWM – Deutsche Wein Marketing GmbH" rel="home">
                    <img src="/Content/DWM-logo.png" alt="DWM – Deutsche Wein Marketing GmbH" class="is-logo-image">
                </a>
            </div>
        </div>
        <div class="navbar-header pull-right">
            <table>
                <tr>
                    <th>
                        <select class="form-control" style="margin-top:10px; width:auto" name="language" id="language">
                            <option @(lang.Equals("de-DE") ? "selected" : "") value="de-DE">Deutsch</option>
                            <option @(lang.Equals("en-GB") ? "selected" : "") value="en-GB">English</option>
                        </select>
                    </th>
                    <th style="padding-left: 20px; padding-right: 20px">
                        <div class="navbar-header">
                            <button class="btn btn-primary" style="margin-top:10px" onclick="@("window.location.href='" + @Url.Action("Login", "Account") + "'");">Login</button>
                        </div>
                    </th>
                </tr>
            </table>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
</div>

<div class="site-footer foooter">
    <div class="container no-print">
        <footer>
            <p>
                2021 © DWM - Deutsche Wein Marketing GmbH. All rights reserved.
                <a class="" style="float: right;" href="https://www.wine-trophy.com/de/impressum/">Impressum</a>
                <a class="" style="padding-right: 10px; float: right;" href="https://www.wine-trophy.com/de/datenschutz/">Datenschutz</a>
            </p>
        </footer>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
